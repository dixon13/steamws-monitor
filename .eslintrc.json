{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "classes": true,
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error", 2, { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            0
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error"
        ],
        "no-unused-vars": [
            "warn",
            {
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "require-yield": 0,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-console": "warn",
        "eqeqeq": [
            "error",
            "smart"
        ]
    }
}